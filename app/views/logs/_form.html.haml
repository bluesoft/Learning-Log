= form_for(@log) do |f|
  - if @log.errors.any?
    #error_explanation
      %h2
        = pluralize(@log.errors.count, "error")
        prohibited this log from being saved:
      %ul
        - @log.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .field
    = f.label :created_at
    %br/
    = @log.created_at
  .field
    = f.label :text
    %br/
    = f.text_area :text
  .actions
    = f.submit