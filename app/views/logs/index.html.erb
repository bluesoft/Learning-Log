<h1 style="color:darkblue" >Lista de Logs</h1>

<table>

<br />
<thead>
  <tr>
	<th>Data</th>    
	<th>Descrição</th>
    <th colspan="3"></th>
  </tr>
</thead>
<tbody>
<% @logs.each do |log| %>
  <tr class=<%=cycle('even', 'odd')%>>
	<td><%= log.created_at.to_formatted_s(:long) %></td>    
	<td><%= log.description %></td>
	
    <td><%= link_to 'Visualizar', log, :class =>"button" %></td>
    <td><%= link_to 'Editar', edit_log_path(log), :class =>"button" %></td>
    <td><%= link_to 'Excluir', log, :confirm => 'Confirma exclusão?', :method => :delete, :class =>"button danger" %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />
